  <!--  DataSource deployment configuration  -->
  <!--  Targets:
  				Local     ===>  
  				                jdbcUrl=jdbc:mysql://localhost:3306/RRDB?serverTimezone=Europe/Madrid
  				                userName=rr
  				                password=remo
  				                
  				AWS-dev   ===>  
  				                jdbcUrl=jdbc:mysql://localhost:3306/RRDB?serverTimezone=Europe/Madrid
  				                userName=rr
  				                password=n5wg43k3kh4wh1giu8e
  				                
  				AWS-prod  ===>  
  				                jdbcUrl=jdbc:mysql://PENDING
  				                userName=<SECRET>
  				                password=<SECRET>
  -->  				              
  <Resource 
      id="jdbc/RRDS" 
      type="javax.sql.DataSource"  
      auth="Container">
    jtaManaged=true
    jdbcDriver=com.mysql.jdbc.Driver
    jdbcUrl=jdbc:mysql://localhost:3306/RRDB?serverTimezone=UTC
    userName=rr
    password=remo
    maxActive=100
    maxIdle=30
    validationQuery=/* ping */
    testOnBorrow=true
    testWhileIdle=true
    timeBetweenEvictionRunsMillis=10000
    minEvictableIdleTimeMillis=60000
  </Resource>
  
  
  <!--  AWS SES deployment configuration  -->
  <!--  To be provided by AWS SES:
  				SES configuration in N.Virginia (region US-EAST-1).
  				jrr-rrsvc-dev/AKIA2F5P2JEUOV3A6X2L/sDrLfKh67BWFba2AHzbcmKsY+lb7oCNr9JvjX9M3
  				IAM UserId: Dev R&R Service (jrr-rrsvc-dev). User with SES full access profile, for development purposes only.
  -->
