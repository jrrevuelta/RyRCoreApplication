      id="aws-ses/RR-SimpleEmailService"
      class-name="org.jrrevuelta.rr.service.config.AwsSesClientConfig">
    iamUserName=jrr-rrsvc-dev
    iamUserAccessKeyId=
    iamUserSecretAccessKey=
    awsRegion=us-east-1
  </Resource>

</resources>
